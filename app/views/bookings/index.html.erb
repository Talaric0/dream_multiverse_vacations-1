<div class="container">
  <div class="cards">
    <% @bookings.each do |booking| %>
      <div class="card">
        <%= booking.user.first_name %> <br>
        <%= booking.trip_duration %> <br>
        <%= booking.status %> <br>
        <%= booking.dimension.name %> <br>
        <%= booking.dimension.description %>
        <%= link_to '❌', booking_path(booking.id), method: :delete, data: { confirm: 'Are you certain you want to delete this booking?'} %>
      </div>
      <% end %>

  </div>
</div>


