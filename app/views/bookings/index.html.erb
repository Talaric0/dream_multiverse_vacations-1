 <h1 class="text-center title">Here are all your bookings</h1>
 
<%# bookings container is going to hold all the bookings %>
<div class="bookings-container">
 
  <%# render each booking card %>
  <% @bookings.each do |booking|%>
    <%# this booking container is going to be a flexbox with info on the left & image on the right %>
    <div class="booking-container"> 
 
      <div class="booking-info">
        <h2>Booking for <%= booking.dimension.name%></h2>
        <h3><%= booking.dimension.description %></h3>
        <h4>Duration: <%= "#{booking.trip_duration} years" %></h4>
        <%# there will be an error below due to the path %>
        <h5><%= link_to 'Cancel Booking', booking_path(booking.id), method: :delete, data: { confirm: 'Are you certain you want to delete this booking?'} %></h5>
      </div>
 
 
      <%= cl_image_tag booking.dimension.photo.key %>

    </div>
 
  <%end%>
 
</div>

<button class="btn"><%= link_to "back", dimensions_path %></button>